    <resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>

        <item name="buttonStyle">@style/BeatBoxButton</item>
        <item name="actionBarPopupTheme"> @style/MyActionBarPopupTheme</item>
        <item name="android:windowBackground">@color/primary_light</item>




    </style>

    <style name="BeatBoxButton" parent="Base.Widget.AppCompat.Button" >
        <item name="android:background">@drawable/button_beat_box</item>
    </style>

        <style name="MyActionBarPopupTheme">
            <item name="android:textColor">@color/primary_light</item>
            <item name="android:background">@color/primary</item>
        </style>

    <style name="FloatingButton">
        <item name="colorAccent">@color/dark_red</item>
    </style>

    <style name="BeatBoxButton.Strong" >
        <item name="android:textStyle">bold</item>
    </style>

</resources>
